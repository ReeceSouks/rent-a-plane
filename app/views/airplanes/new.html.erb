<h1 class="header_form">List your Airplane</h1>
<div class="col-xs-12 col-sm-6 col-sm-offset-3">
  <%= simple_form_for(@airplane) do |f|%>
    <div class="row_form">
      <div class="col-xs-12 col-sm-4-offset-3">
      <%= f.input :title %>
      <%= f.input :price_per_day %>
      <%= f.input :description %>
      <%= f.input :airport %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-danger" %>
    </div>
   </div>
  <% end %>
</div>

