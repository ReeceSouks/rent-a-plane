<div class="text-center row">
    <div class="col-md-4 offset-md-4 card-trip" id="booking-show">
      <% if @booking.start_date > DateTime.now.to_date %>
        <h2 style="font-size: 30px"><strong>My Upcoming Flight:</strong></h2>
        <div class="booking-show-p">
          <p>From: <%= @booking.start_date %></p>
          <p>To: <%= @booking.end_date %></p>
          <p>Plane id: <%= @booking.airplane.id %></p>
          <p><strong>Total price: $</strong><%= @booking.price %></p>
          <div class="listing destroy">
          <%= link_to airplane_path(@booking.airplane.id), method: :delete, data: { confirm: 'Are you sure you want to cancel this trip?'} do %>
            <button>Cancel Booking</button>
          <% end %>
          </div>
      </div>
      <% else %>
        <h2><strong>My Previous Flight:</strong></h2>
        <p><%= @booking.start_date %></p>
        <p><%= @booking.end_date %></p>
        <p><%= @booking.airplane.id %></p>
        <p><strong>Total price: $</strong><%= @booking.price %></p>
        <p>Add a review of this previous flight </p>
          <%= simple_form_for [ @booking, @review ] do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.button :submit %>
          <% end %>
          <%= link_to "Back to my bookings", bookings_path %>
        <% end %>
  </div>
</div>
