

<div class="pro-container pb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/ONpGBpns3cs);">
  <h2 class="text-center" style="color: white;" id="profile-name"><strong>Hello, <%= @user.first_name %>!</strong></h2>
  <div class="pro-row">
    <div class="text-center pro-column">
      <div id="pro-content"><strong>First Name:</strong> <%= @user.first_name %></div>
      <div id="pro-content"><strong>Last Name:</strong> <%= @user.last_name %></div>
      <div id="pro-content"><strong>Email:</strong> <%= @user.email %></div>
    </div>
    <h3 class="text-center" style="color: white;" id="profile-name">My Airplanes:</h3>
    <div class="text-center pro-column" style="font-size: 18px;">
     <% @airplanes.each do |airplane| %>
          <p>Plane: <%= airplane.title %></p>
        <% end %>
    </div>
    <% @bookings.each do |booking| %>
    <h2 style="font-size: 17px" class="text-center" id="profile-content"><strong>My Upcoming Flight:</strong></h2>
    <div class="text-center pro-column">
      <p>From: <%= booking.start_date %></p>
      <p>To: <%= booking.end_date %></p>
      <p>Plane: <%= booking.airplane.title %></p>
      <p><strong>Total price: $</strong><%= booking.price %></p>
    </div>
    <% end %>
  </div>
</div>
