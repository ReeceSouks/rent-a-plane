<div style="display:block">
  <div class="form-bg">
    <div class="form-layout">
      <div class="form-layout-row">
        <div style="padding:200px" class="form-card flex full-width justify-center align-group-center-md">
          <div class="form-card-2 full-width" id="login" >
          <h2 class="form-h2">Welcome back to PrivateFly!</h2>
            <div class="form-link text-md-left">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Login" %>
              </div>
            <% end %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
