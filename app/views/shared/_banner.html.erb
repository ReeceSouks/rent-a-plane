<%= video_tag 'homepage.mp4', class:"home-video", autoplay:true, muted:true, loop:true %>
  <div class="container">
    <h1>Rent a Jet</h1>
    <p>Fly private anywhere around the world.</p>
    <form class="d-flex justify-content-center mt-5 flex-column w-50 mx-auto" action="/airplanes">
      <div class="d-flex justify-content-center">
        <div class="form-group w-100 mr-6">
          <label for="departure-city" style="color: white;">Departure City</label>
          <input type="text" name="query" class="form-control" id="search-airport" placeholder="From">
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <div class="form-group w-50 mr-5">
          <label for="departure" style="color: white;">Choose date</label>
          <input type="text" readonly="readonly" class="form-control" id="depart">
        </div>
        <div class="form-group w-50">
          <label for="arrival" style="color: white;">Choose date</label>
          <input type="text" readonly="readonly" class="form-control" id="arrival">

        </div>
      </div>
      <button type="submit" id="submit-button" class="btn btn-dark d-flex justify-content-center mx-auto"><%= link_to "Search Jets", airplanes_path, class:'sub-button' %></button>
    </form>
  </div>
