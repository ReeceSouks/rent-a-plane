<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1530476219733-88085e45aa2c?ixlib=rb-1.2.1&auto=format&fit=crop&w=2013&q=80);">
  <div class="container">
    <h1>Rent a Jet</h1>
    <p>Fly private anywhere around the world.</p>
    <form class="d-flex justify-content-center mt-5 flex-column w-50 mx-auto" action="/airplanes">
      <div class="d-flex justify-content-center">
        <div class="form-group w-50 mr-5">
          <label for="departure-city" style="color: white;">Departure City</label>
          <input type="text" class="form-control" id="depart-city" placeholder="New York (JFK)">
        </div>
        <div class="form-group w-50">
          <label for="arrival-city" style="color: white;">Arrival City</label>
          <input type="text" class="form-control" id="arrive-city" placeholder="Bali (DPS)">

        </div>
      </div>

      <div class="d-flex justify-content-center">
        <div class="form-group w-50 mr-5">
          <label for="departure" style="color: white;">Choose date</label>
          <input type="text" readonly="readonly" class="form-control" id="depart">
        </div>
        <div class="form-group w-50">
          <label for="arrival" style="color: white;">Choose date</label>
          <input type="text" readonly="readonly" class="form-control" id="arrival">

        </div>
      </div>
      <button type="submit" id="submit-button" class="btn btn-dark d-flex justify-content-center mx-auto"><%= link_to "Submit", airplanes_path, class: 'sub-button' %></button>
    </form>
  </div>
</div>
